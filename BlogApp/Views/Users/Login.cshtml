@model LoginViewModel

<div class="row">
    <div class="col-12">
        <h1>Login</h1>
        <form action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div><!--asp-validation-summary="ModelOnly" Model seviyesinde hataları krımızı renkte gösterir-->
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control"><!--type name id bilgisi kalkar model sayesinde-->
                <span asp-validation-for="Email" class="text-danger"></span><!--her bir controlle ilişkilendirilen hataları kırmızı renkte gösterir-->
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control"><!--type name id bilgisi kalkar model sayesinde-->
                <span asp-validation-for="Password" class="text-danger"></span><!--her bir controlle ilişkilendirilen hataları kırmızı renkte gösterir-->
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>