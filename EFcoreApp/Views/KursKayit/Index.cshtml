@model IEnumerable<KursKayit>

<h2> Kurs Kayıtları</h2>

<a href="/KursKayit/Create" class="btn btn-primary">Kurs Kayıt Ekle</a>
<hr>
<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 150px;">@Html.DisplayNameFor(m => m.KayitId)</th>
            <th>@Html.DisplayNameFor(m => m.Ogrenci.OgrenciAd)</th> 
            <th>@Html.DisplayNameFor(m => m.Kurs.Baslik)</th>
            <th style="width: 150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem=> item.KayitId)</td>
                <td>@Html.DisplayFor(modelItem => item.Ogrenci.OgrenciAd)</td>
                <td>@Html.DisplayFor(modelItem=> item.Kurs.Baslik)</td>  
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Ogrencild" class="btn btn-sn btn-primary">Edit</a> 
                    <a asp-action="Delete" asp-route-id="@item.Ogrencild" class="btn btn-se btn-danger">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>